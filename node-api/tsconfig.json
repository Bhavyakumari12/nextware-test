{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "paths": {
      "@controllers": ["src/controller/index.ts"],
      "@middlewares": ["src/middleware/index.ts"],
      "@models": ["./src/model/index.ts"],
      "@routes": ["src/routes/index.ts"],
      "@services": ["src/service/index.ts"],
      "@utils": ["src/utils/index.ts"]
    }
  }
}
