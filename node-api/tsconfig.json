{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",    
    "baseUrl": ".",                            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true ,
    "outDir": "dist",
    "paths": {
      "@models/*": ["./src/model/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@routes/*": ["src/routes/*"],
      "@config/*": ["src/config/*"],
    }                                
  }
}
